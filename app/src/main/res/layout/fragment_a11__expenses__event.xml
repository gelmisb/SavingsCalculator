                    android:layout_height="wrap_content"
                    android:labelFor="@+id/event_hol_edit"
                    android:text="@string/event_hol"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="16sp" />
            </TableRow>

