<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|bottom"
    android:orientation="vertical"
    tools:context=".calculatesavings.fragments.a2_Expenses_LoanFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="0dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="0dp"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/expenses"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="60sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:layout_marginEnd="0dp"
            android:maxLines="1"
            android:text="@string/loans"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="0dp"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/step_2_of_15"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="0dp"
            android:padding="30dp">

            <!--`````````````` Wages ``````````````-->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/car_loan_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:labelFor="@+id/car_loan_edit"
                    android:text="@string/car_motorbike_loan"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/currency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Euro"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/car_loan_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:autofillHints="e.g. €1,800"
                        android:ems="10"
                        android:inputType="number"
                        android:minHeight="48dp"
                        android:textSize="20sp" />
                </LinearLayout>

                <Spinner
                    android:id="@+id/spinner_expense_step2_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/selection_for_time" />
            </TableRow>


            <!--`````````````` Partner's social welfare ``````````````-->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/education_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:labelFor="@+id/education_edit"
                    android:text="@string/education_tuition_loan"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/currency2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Euro"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/education_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:autofillHints="e.g. €1,800"
                        android:ems="10"
                        android:inputType="number"
                        android:minHeight="48dp"
                        android:textSize="20sp" />
                </LinearLayout>

                <Spinner
                    android:id="@+id/spinner_expense_step2_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/selection_for_time" />
            </TableRow>


            <!--`````````````` CBP ``````````````-->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/home_loan_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:labelFor="@+id/home_loan_edit"
                    android:text="@string/home_loan"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/currency3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Euro"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/home_loan_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:autofillHints="e.g. €1,800"
                        android:ems="10"
                        android:inputType="number"
                        android:minHeight="48dp"
                        android:textSize="20sp" />
                </LinearLayout>

                <Spinner
                    android:id="@+id/spinner_expense_step2_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/selection_for_time" />
            </TableRow>

            <!--`````````````` Maintenance ``````````````-->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/personal_loan_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:labelFor="@+id/personal_loan_edit"
                    android:text="@string/personal_loan"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/currency4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Euro"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/personal_loan_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:autofillHints="e.g. €1,800"
                        android:ems="10"
                        android:inputType="number"
                        android:minHeight="48dp"
                        android:textSize="20sp" />
                </LinearLayout>

                <Spinner
                    android:id="@+id/spinner_expense_step2_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/selection_for_time" />
            </TableRow>

            <!--`````````````` Other Income ``````````````-->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/business_loan_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:labelFor="@+id/business_loan_edit"
                    android:text="@string/business_loan"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/currency5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Euro"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/business_loan_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:autofillHints="e.g. €1,800"
                        android:ems="10"
                        android:inputType="number"
                        android:minHeight="48dp"
                        android:textSize="20sp" />
                </LinearLayout>

                <Spinner
                    android:id="@+id/spinner_expense_step2_5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/selection_for_time" />
            </TableRow>



            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/holiday_loan_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:labelFor="@+id/holiday_loan_edit"
                    android:text="@string/holiday_loan"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/currency6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Euro"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/holiday_loan_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:autofillHints="e.g. €1,800"
                        android:ems="10"
                        android:inputType="number"
                        android:minHeight="48dp"
                        android:textSize="20sp" />
                </LinearLayout>

                <Spinner
                    android:id="@+id/spinner_expense_step2_6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/selection_for_time" />
            </TableRow>



            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/credit_loan_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:labelFor="@+id/credit_card_loan_edit"
                    android:text="@string/credit_card_loan"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/currency7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Euro"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/credit_card_loan_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:autofillHints="e.g. €1,800"
                        android:ems="10"
                        android:inputType="number"
                        android:minHeight="48dp"
                        android:textSize="20sp" />
                </LinearLayout>

                <Spinner
                    android:id="@+id/spinner_expense_step2_7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/selection_for_time" />
            </TableRow>

        </TableLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/nextBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="25dp"
        android:text="@string/next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</LinearLayout>